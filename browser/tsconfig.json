{
    "compilerOptions": {
        "sourceMap": true,
        "outDir": "./build",
        "moduleResolution":"node",
        "noImplicitAny": true,
        "esModuleInterop": true,
        "noImplicitReturns": true,
        "target": "es2021",
        "downlevelIteration": true,
        "lib": [
            "DOM",
            "ES2021",
            "DOM.Iterable",
            "ScriptHost"
        ],
        "types": [
            "jquery", "resize-observer-browser", "codemirror"
        ],
        "typeRoots": ["node_modules/@types"],
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "./src/ts/**/*.ts", "custom.d.ts"
    ]
}