{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Debug",
            "preLaunchTask": "webpack: dev server",
            "url": "http://localhost:8080?host=auto",
            "runtimeArgs": [/*"--incognito"*/],
            "webRoot": "${workspaceFolder}/static/public",
            "sourceMaps": true,
            "trace": true,
            "userDataDir": true,
            "skipFiles": [  
                "${workspaceRoot}/node_modules/**/*.js",
            ]
        }
    ]
  }